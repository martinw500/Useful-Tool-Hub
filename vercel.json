{
  "version": 2,
  "builds": [
    {
      "src": "instagram-downloader/api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "youtube-downloader/api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "functions": {
    "instagram-downloader/api/index.py": {
      "maxDuration": 60
    },
    "youtube-downloader/api/index.py": {
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/instagram(.*)",
      "dest": "instagram-downloader/api/index.py",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    },
    {
      "src": "/api/youtube(.*)",
      "dest": "youtube-downloader/api/index.py",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    }
  ]
}
